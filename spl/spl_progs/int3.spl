alias physicalSP S0;
physicalSP = [PTBR+2*(SP/512)]*512+SP%512;
alias filename S6;
filename = [physicalSP-4];
alias newlseek S7;
newlseek = [physicalSP-3];
alias syscallno S8;
syscallno = [physicalSP-1];
alias Pid S1;
Pid= (PTBR-1024)/8;
alias curPCB S2;
curPCB=READY_LIST+32*Pid;
alias counter S3;
alias filetableindex S4;
alias fatindex S5;
alias basicblocknumber S9;
alias datablocknumber S10;
alias lseek S11;
alias bbindex S12;
alias temp S13;
alias filesize S14;

if(syscallno==6) then
	//seek system call
	
	//valid file descriptor
	
	if(filename>=0 && filename<=7) then
		filename=2*filename + 15;
		if([curPCB+filename]==-1) then
			print "PCB fault";
			[physicalSP-2]=-1;
			ireturn;
		else
		
			filetableindex=[curPCB+filename];
			lseek=[curPCB+filename+1];
			if([filetableindex+FILE_TABLE]==-1) then
				print "file table error";
				[physicalSP-2]=-1;
				ireturn;
			else
				fatindex=[filetableindex+FILE_TABLE];
				temp=[FAT+fatindex+1];
				if(newlseek>=0 && newlseek<=temp) then
					[curPCB+filename+1]=newlseek;
				else
					print "lseek invalid";
					[physicalSP-2]=-1;
					ireturn;
				endif;
			endif;
		endif;
	else
		print "inval filedec";
		[physicalSP-2]=-1;
		ireturn;
	endif;
	store(5,19);
	store(6,20);
	print "seek success";
	[physicalSP-2]=0;
	ireturn;
else
	if(syscallno==7) then
	
		// read system call
		
		if(filename>=0 && filename<=7) then
			filename=2*filename + 15;
			if([curPCB+filename]==-1) then
				print "PCB fault";
				[physicalSP-2]=-1;
				ireturn;
			else
				filetableindex=[curPCB+filename];
				lseek=[curPCB+filename+1];
				if([filetableindex+FILE_TABLE]==-1) then
					print "file table error";
					[physicalSP-2]=-1;
					ireturn;
				else
					fatindex=[filetableindex+FILE_TABLE];
					if([FAT+fatindex]==-1) then
						print "FAT table error";
						[physicalSP-2]=-1;
						ireturn;
					endif;
					basicblocknumber=[FAT+fatindex+2];
					filesize=[FAT+fatindex+1];
					if(lseek==filesize) then
						print "EOF";
						[physicalSP-2]=-1;
						ireturn;
					endif;	
					bbindex=lseek/512;
					load(1,basicblocknumber);
					if([SCRATCHPAD+bbindex]==""||[SCRATCHPAD+bbindex]=="") then
						print "bbindex empty";
						[physicalSP-2]=-1;
						ireturn;			
					endif;
					temp=[SCRATCHPAD+bbindex];
					store(1,basicblocknumber);
					load(1,temp);
					counter=lseek%512;
					[physicalSP-3]=[SCRATCHPAD+counter];
					store(1,temp);
					[curPCB+filename+1]=[curPCB+filename+1] +1;		
					store(5,19);
					store(6,20);
					print "read success";
					[physicalSP-2]=0;
					ireturn;
				endif;		
			endif;	
		else
			print "inval filedec";
			[physicalSP-2]=-1;
			ireturn;
		endif;
	endif;
endif;						
					
	
